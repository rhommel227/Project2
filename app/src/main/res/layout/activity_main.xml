<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/hihatBtn"
        android:layout_width="93dp"
        android:layout_height="260dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745"
        app:srcCompat="@drawable/hihatfull" />

    <ImageButton
        android:id="@+id/snareBtn"
        android:layout_width="119dp"
        android:layout_height="196dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="160dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/snare" />

    <ImageButton
        android:id="@+id/bassBtn"
        android:layout_width="149dp"
        android:layout_height="150dp"
        android:layout_marginBottom="120dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bass" />

    <ImageButton
        android:id="@+id/rideBtn"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="37dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ride" />

    <ImageButton
        android:id="@+id/tomBtn"
        android:layout_width="93dp"
        android:layout_height="260dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="91dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tom" />

    <ImageButton
        android:id="@+id/newActivityBtn"
        android:layout_width="86dp"
        android:layout_height="81dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="44dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drumpad" />

</androidx.constraintlayout.widget.ConstraintLayout>